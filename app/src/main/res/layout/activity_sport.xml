<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:gravity="center"
        app:navigationIcon="@mipmap/ic_back"
        app:title=" ">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/app_sport"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/btn_query_sport_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查询运动模式"></Button>

        <Button
            android:id="@+id/btn_query_sport_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_query_sport_model"
            android:text="查询运动状态" />

        <EditText
            android:id="@+id/et_sport_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_query_sport_status"
            android:hint="运动模式 1-6" />

        <Button
            android:id="@+id/btn_start_sport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_sport_mode"
            android:text="开始运动" />

        <Button
            android:id="@+id/btn_stop_sport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_start_sport"
            android:text="结束运动" />


        <Button
            android:id="@+id/btn_read_sport_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_stop_sport"
            android:text="读取运动数据" />

    </RelativeLayout>

</RelativeLayout>